    <script src="../jquery-1.8.2.js"></script>
    <script src="../mfs100-9.0.2.6.js"></script>
    <script>
      function Capture() {
        try {
          //   document.getElementById('fingerimg').src = "data:image/bmp;base64,";
          var res = CaptureFinger(60, 10);
          if (res.httpStatus) {
            document.getElementById("txtStatus").value =
              "ErrorCode: " +
              res.data.ErrorCode +
              " ErrorDescription: " +
              res.data.ErrorDescription;
            if (res.data.ErrorCode == "0") {
              document.getElementById("fingerimg").src =
                "data:image/bmp;base64," + res.data.BitmapData;
              document.getElementById("isoTemp").value = res.data.IsoTemplate;
              document.getElementById("quality").value = res.data.Quality;
            }
          } else {
            alert(res.err);
          }
        } catch (e) {
          alert(e);
        }
        return false;
      }
    </script>
  </head>
  <body>
    <div class="container">
      <div class="reg-form">
        <form action="/register" method="POST" name="reg">
          <div>
            <label for="customerid">Customer ID: </label
